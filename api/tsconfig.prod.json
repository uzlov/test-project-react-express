{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "lib": ["ES2023"],
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "tests",
    "scripts",
    "eslint.config.ts",
    "vitest.config.js"
  ]
}
